#!/usr/bin/env node
const fs = require("fs");
const prettierMarkdownCodeblocks = require("../lib/prettier-markdown-codeblocks");
let markDown = "";
if (process.argv[2]) {
  markDown = fs.readFileSync(process.argv[2], "utf8");
} else {
  var readline = require("readline");
  var rl = readline.createInterface({
    input: process.stdin,
    output: process.stdout,
    terminal: false
  });

  rl.on("line", line => {
    markDown += `${line}\n`;
  });

  rl.on("close", () => {
    prettierMarkdownCodeblocks.cleanFile(markDown);
  });
}
